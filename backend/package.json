{
  "name": "oee-monitor-backend",
  "version": "1.0.0",
  "description": "Backend API para Sistema OEE Monitor com autenticação JWT e MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "seed": "node scripts/seedDatabase.js",
    "seed:prod": "NODE_ENV=production node scripts/seedDatabase.js",
    "build": "echo 'Backend build completed'",
    "deploy": "npm run build && npm run start:prod",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "backup:db": "node scripts/backupDatabase.js",
    "restore:db": "node scripts/restoreDatabase.js",
    "deploy": "git pull && npm install && npm run build && pm2 restart all",
    "health": "curl -f http://localhost:3001/api/health || exit 1",
    "logs": "tail -f logs/app.log"
   },
   "keywords": [
    "oee",
    "manufacturing",
    "mongodb",
    "jwt",
    "authentication",
    "express"
  ],
  "author": "OEE Monitor Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
