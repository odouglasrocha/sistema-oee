# ===== CONFIGURAÇÕES DO SERVIDOR =====
PORT=3001
NODE_ENV=production

# ===== BANCO DE DADOS =====
# OBRIGATÓRIO: String de conexão MongoDB
# Exemplo: mongodb://usuario:senha@localhost:27017/sistema_oee
# Exemplo Atlas: mongodb+srv://usuario:senha@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=

# ===== AUTENTICAÇÃO JWT =====
# OBRIGATÓRIO: Chave secreta para JWT (mínimo 32 caracteres)
# Gere uma chave segura: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# ===== SEGURANÇA =====
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_TIME=900000
PASSWORD_EXPIRY_DAYS=90
SESSION_SECRET=

# ===== CORS E FRONTEND =====
# URLs permitidas para CORS (separadas por vírgula)
FRONTEND_URLS=http://localhost:8080,http://localhost:8081,http://localhost:3000
FRONTEND_URL=http://localhost:8081
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:8081,http://localhost:3000

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# ===== LOGS =====
LOG_LEVEL=info
ENABLE_MORGAN_LOGS=true

# ===== RECURSOS =====
ENABLE_2FA=false
ENABLE_AUDIT_LOG=true

# ===== EMAIL (OPCIONAL) =====
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@oeemonitor.com

# ===== BACKUP (OPCIONAL) =====
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30